#!/usr/bin/env zsh

# So these commands can be executed with sudo
alias sudo="sudo "

# Easier navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias ~="cd ~"

# List directory contents
alias l='ls -lah'
alias la='ls -lAh'
alias lh="ls -a | egrep '^\.'"
alias ll='ls -lh'
