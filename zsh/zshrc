#!/usr/bin/env zsh

# Add some custom paths to PATH
export PATH="$HOME/.cargo/bin:$HOME/.local/bin:$PATH"

# Set default editor to Vim
export EDITOR='vim'

# Load required modules
autoload -U compinit promptinit

# Add the function directory to fpath for the 'pure' prompt
fpath=( "$HOME/.zsh/functions" $fpath )

# For Oh My Zsh lib/history.zsh
export HIST_STAMPS="yyyy-mm-dd"

# Source all our plugins,
source <(sheldon -q source)

# Load the 'pure' prompt!
promptinit
prompt pure
